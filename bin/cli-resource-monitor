#!/bin/bash
# CLI Resource Monitor wrapper script for Linux/macOS

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
JAR_PATH="$SCRIPT_DIR/../build/libs/cli-resource-monitor-0.1.0.jar"

if [ ! -f "$JAR_PATH" ]; then
    echo "Error: JAR file not found at $JAR_PATH"
    echo "Please run 'gradle build' first"
    exit 1
fi

java -jar "$JAR_PATH" "$@"
